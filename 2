local function giveRengokuTool()
	local tool = Instance.new("Tool")
	tool.Name = "Rengoku"
	tool.RequiresHandle = true

	-- Flat square "card" in the hand
	local handle = Instance.new("Part")
	handle.Name = "Handle"
	handle.Size = Vector3.new(2, 2, 0.2) -- Flat, like a photo
	handle.Anchored = false
	handle.CanCollide = false
	handle.Color = Color3.fromRGB(255, 255, 255)
	handle.Material = Enum.Material.SmoothPlastic
	handle.Parent = tool
	tool.Handle = handle

	-- SurfaceGui for image
	local surfaceGui = Instance.new("SurfaceGui")
	surfaceGui.Face = Enum.NormalId.Front
	surfaceGui.Adornee = handle
	surfaceGui.AlwaysOnTop = true
	surfaceGui.ResetOnSpawn = false
	surfaceGui.Parent = handle

	local image = Instance.new("ImageLabel")
	image.Size = UDim2.new(1, 0, 1, 0)
	image.Position = UDim2.new(0, 0, 0, 0)
	image.BackgroundTransparency = 1
	image.Image = "rbxassetid://114065777135894"
	image.Parent = surfaceGui

	-- Positioning the card in the hand
	tool.GripPos = Vector3.new(0, 0, 0.9) -- Pulls image forward
	tool.GripUp = Vector3.new(0, 1, 0)
	tool.GripForward = Vector3.new(0, 0, -1)
	tool.GripRight = Vector3.new(1, 0, 0)

	-- Give it to the player
	local player = game.Players.LocalPlayer
	tool.Parent = player:WaitForChild("Backpack")
end
